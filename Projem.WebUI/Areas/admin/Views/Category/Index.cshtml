@model IEnumerable<Projem.BOL.Entities.Category>

@{
    ViewBag.sayfaBaslik = "Kategori Yönetimi";
    ViewBag.tabloBaslik = "Kategoriler";
}
<p>
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr style="background-color:#808080 ; color:black">

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CIndex)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CIndex)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" })<br />
                @Html.ActionLink("Detaylar", "Details", new { id = item.ID },new { @class = "btn btn-info" }) <br />
                @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>


