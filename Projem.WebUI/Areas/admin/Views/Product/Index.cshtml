@model IEnumerable<Projem.BOL.Entities.Product>

@{
    ViewBag.sayfaBaslik = "Ürün Yönetimi";
    ViewBag.tabloBaslik = "Ürünlar";
}
<p>
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr style="background-color:#808080 ; color:black">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PIndex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsNew)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDiscount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.Raw(item.Detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) TL
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PIndex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsNew)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDiscount)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" })<br />
                @Html.ActionLink("Detaylar", "Details", new { id = item.ID }, new { @class = "btn btn-info" }) <br />
                @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
