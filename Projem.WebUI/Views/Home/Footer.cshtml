@using Projem.BOL.Entities
@model IEnumerable<TContent>
@{
    TContent iletisimContent = Model.Where(w => w.Filter == "İletişim").FirstOrDefault();
    TContent sosyalContent = Model.Where(w => w.Filter == "Sosyal").FirstOrDefault();
    TContent hakkimizdaContent = Model.Where(w => w.Filter == "Hakkımızda").FirstOrDefault();
}
<section class="footer-section">
    <div class="container">
        <div class="footer-logo text-center">
